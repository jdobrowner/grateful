{
  "name": "mindful-moments",
  "version": "1.0.0",
  "description": "A platform for staying mindful",
  "main": "index.js",
  "repository": "git@github.com:mzarako/mindful-moments.git",
  "scripts": {
    "start": "npm run watch:css & npm run start:dev-server",
    "start:dev-server": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "server": "nodemon server/server",
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive ./test",
    "test:watch": "npm run test -- --watch",
    "build:css": "rm -f build/style.css && lessc client/styles/style.less --clean-css build/style.css",
    "watch:css": "npm run build:css && chokidar-cmd -c 'npm run build:css' -t client/styles/**/*.less",
    "build:js": "webpack",
    "build:html": "rm -f build/index.html && cp client/index.html build/",
    "build:images": "cp -r client/images/* build/",
    "build": "rm -rf build && mkdir -p build && npm run build:html && npm run build:css && npm run build:images && npm run build:js",
    "watch": "webpack --watch & npm run watch:css"
  },
  "author": "Monika Zarako-Dobrowner and Jason Dobrowner",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "chai-jquery": "^2.0.0",
    "chokidar": "^1.6.1",
    "chokidar-cmd": "^1.2.1",
    "jquery": "^3.1.1",
    "jsdom": "^9.9.1",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "mocha": "^3.2.0",
    "react-addons-test-utils": "^15.4.2",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-preset-stage-1": "^6.16.0",
    "bcrypt-nodejs": "0.0.3",
    "file-loader": "^0.9.0",
    "jquery": "^3.1.1",
    "jwt-simple": "^0.5.1",
    "mongoose": "^4.7.7",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-form": "^6.4.3",
    "redux-thunk": "^2.2.0"
  }
}
